<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amal.project3.Project3controller">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="MONOPOLY">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Label>
        <Label text="Welcome to Monopoly!">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Separator prefWidth="200.0" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Number of Players (2-8):" />
                <TextField fx:id="numPlayersField" prefWidth="100.0" promptText="2-8" />
                <Button mnemonicParsing="false" onAction="#onGeneratePlayerFields" text="Generate" />
            </children>
        </HBox>
        <ScrollPane fitToWidth="true" maxHeight="300.0" minHeight="150.0" prefHeight="200.0" prefWidth="720.0">
            <content>
                <VBox fx:id="playerNamesBox" alignment="CENTER" spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
        <Label fx:id="errorLabel" textFill="RED" />
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="startGameButton" disable="true" mnemonicParsing="false" onAction="#onStartGame" prefHeight="40.0" prefWidth="150.0" text="Start New Game">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="loadGameButton" mnemonicParsing="false" onAction="#onLoadGame" prefHeight="40.0" prefWidth="150.0" text="Load Saved Game">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
